@model PdfToExcelModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Convert PDF to Excel</h2>
                        <form asp-action="ConvertPdfToExcel" asp-controller="PdfToExcels" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="pdfFile" class="form-label">Select PDF file:</label>
                                <input type="file" id="pdfFile" name="PdfFile" class="form-control" accept=".pdf" />
                                <small class="text-muted">Only PDF files are allowed.</small>
                            </div>
                            <div class="form-group mt-4 ">
                                <button type="submit" class="btn btn-primary">Convert</button>
                            </div>
                        </form>
                        <div id="excelResult" style="display: none;">
                            <h3>Converted Excel File:</h3>
                            <a id="excelDownloadLink" href="#" download="converted_excel.xlsx">Download Excel File</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
   </div>
    <script>
        function resetInputField() {
            document.getElementById("pdfFile").value = "";
        }
    </script>
